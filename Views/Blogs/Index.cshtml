@using WebBlog.Models
@using WebBlog.Services.Iterfaces
@model IEnumerable<Blog>
@inject IImageService ImageService

@{
    ViewData["Title"] = "Index";
}

<h1>Index of Blogs</h1>

<p>
    <a asp-action="Create">Create a New Blog</a>
</p>
<table class="table thead-dark">
    <thead>
        <tr>
            <th class="col-2">
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Description)*@
                Description
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Updated)*@
                Last Updated
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BlogUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>
                    <img class=" img-fluid" src="@ImageService.DecodeImage(blog.ImageData, blog.ImageType)">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => blog.Created)
                </td>
                <th>
                    @Html.DisplayFor(model => blog.Updated)
                </th>
                <th>
                    @Html.DisplayFor(model => blog.Id)
                </th>
                <td>
                    <a asp-action="Edit" asp-route-id="@blog.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@blog.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@blog.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>